<main class="page_block">
	<section class="container">
		<div class="flex-container">
			<div class="flex-item">
				<div class="result">
					<div class="result_title">Your Result</div>
					<div class="result_score">76</div>
					<div><span class="max_score_of">of 100</span></div>
					<div class="result_description_title">Great</div>
					<div class="result_description">You scored higher than 65% of the people who have taken these tests.</div>
				</div>
			</div>
			<div class="flex-item">
				<div class="category">
					<div class="summary">Summary</div>

					{{#each summary}}
					{{#if isReaction}}
					<div class="alert alert-danger">
						<div>
							<img class="category_icon" src="/images/icon-reaction.svg">	
							<span class="category_name">{{category}}</span>
						</div>
						<div>
						 <span class="category_score">{{score}}</span>
						 <span class="max_score">/ 100</span>
					    </div>					
					</div>
					
					{{/if}}
					{{#if isMemory}}
					<div class="alert alert-warning">
						<div>
							<img class="category_icon" src="/images/icon-memory.svg">	
							<span class="category_name">{{category}}</span>
						</div>
						<div>
						 <span class="category_score">{{score}}</span>
						 <span class="max_score">/ 100</span>
					    </div>		
					</div>
					{{/if}}
					{{#if isVerbal}}
					<div class="alert alert-success">
						<div>
							<img class="category_icon" src="/images/icon-verbal.svg">	
							<span class="category_name">{{category}}</span>
						</div>
						<div>
						 <span class="category_score">{{score}}</span>
						 <span class="max_score">/ 100</span>
					    </div>		
					</div>
					{{/if}}
					{{#if isVisual}}
					<div class="alert alert-primary">
						<div>
							<img class="category_icon" src="/images/icon-visual.svg">	
							<span class="category_name">{{category}}</span>
						</div>
						<div>
						 <span class="category_score">{{score}}</span>
						 <span class="max_score">/ 100</span>
					    </div>		
					</div>
					{{/if}}

					{{/each}}
				</div>
				<button>Continue</button>
			</div>
		</div>
	</section>
</main>